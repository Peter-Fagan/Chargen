<!DOCTYPE html>
<html>
<head>
  <title>Chargen</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if flash[:success] %>
    <h1><%= flash[:success] %></h1>
  <% end %>
  <% if flash[:error] %>
    <h1><%= flash[:error] %></h1>
  <% end %>
<div class="vav-fixed">
  <nav>
    <div class="nav-wrapper">
      <ul id="nav-mobile" class= "left">
        <% unless @current_user.present? %>
          <li><%= link_to( "Login", login_path() ) %></li>
          <li><%= link_to( "Sign up", new_user_path() ) %></li>
        <% else %>
          <li><%= link_to("Edit your profile", edit_user_path(@current_user.id)) %></li>
          <li><%= link_to( "Log out #{@current_user.email}", logout_path(), :method => :delete ) %></li>
        <% end %>
      </ul>
    </div>
  </nav>
</div>
<div class="container">
  <%= yield %>
</div>

</body>
</html>
